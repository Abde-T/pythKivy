#:kivy 2.2.1

<Button>
    font_size: 32
    background_normal:''
    background_color:(0,0,1)

<TextInput>
    background_color:(.8,.8,.8)

<Label>
    font_size: 32

<MayLayout>
    #change app bg
    # canvas.before:
    #     Color:
    #         rgba: (1,.9,.9,1)
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 10
        spacing: 10

        Image:
            source:'images/cake.jpg'
            allow_stretch:True
            keep_ratio: false

        Label:
            text:'Name'
            background_color:(.5,.7,.8, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            #tex properties
            color:(0,1,0,1)
            bold: True
            italic: True
            outline_color:(0,0,0,1)
            outline_width: 4

        TextInput:
            multiline: False
        Button:
            text:'submit'
        Button:
            text:'clear'
            background_color:(1,0,0)
  