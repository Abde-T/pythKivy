<AnchorLayoutExample>:
    # right, left, center
    anchor_x: 'right'
    # bottom, top, center
    anchor_y: 'top'

    BoxLayout:
        size_hint: .1, .1
        Button: 
            text: 'A'
        Button: 
            text: 'B'
       


